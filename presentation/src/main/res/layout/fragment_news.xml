<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:scrollbars="none"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        style="@style/Background1"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/big_margin"
            android:layout_marginTop="@dimen/medium_margin"
            android:layout_marginStart="@dimen/big_margin"
            android:orientation="horizontal">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/MediumGray"
                android:layout_height="60dp"
                android:layout_weight="1"
                app:cardElevation="0dp"
                app:cardCornerRadius="@dimen/card_radius">

                <ImageView
                    style="@style/Background2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/first_moex_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/green"
                        android:fontFamily="@font/oxygen"
                        android:textSize="14sp"
                        android:layout_gravity="center"/>
                    <TextView
                        android:id="@+id/first_moex_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:fontFamily="@font/oxygen"
                        android:layout_gravity="center"/>
                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginStart="@dimen/big_margin"
                android:layout_weight="1"
                app:strokeWidth="1dp"
                app:strokeColor="@color/MediumGray"
                app:cardCornerRadius="@dimen/card_radius">
                <ImageView
                    style="@style/Background2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/second_moex_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/green"
                        android:fontFamily="@font/oxygen"
                        android:textSize="14sp"
                        android:layout_gravity="center"/>
                    <TextView
                        android:id="@+id/second_moex_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:fontFamily="@font/oxygen"
                        android:layout_gravity="center"/>
                </LinearLayout>


            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginStart="@dimen/big_margin"
                android:layout_weight="1"
                app:strokeWidth="1dp"
                app:strokeColor="@color/MediumGray"
                app:cardCornerRadius="@dimen/card_radius">
                <ImageView
                    style="@style/Background2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/third_moex_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/green"
                        android:fontFamily="@font/oxygen"
                        android:textSize="14sp"
                        android:layout_gravity="center"/>
                    <TextView
                        android:id="@+id/third_moex_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:fontFamily="@font/oxygen"
                        android:layout_gravity="center"/>
                </LinearLayout>


            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/big_margin"
            android:layout_marginTop="@dimen/medium_margin"
            android:layout_marginStart="@dimen/big_margin"
            android:orientation="horizontal">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/note_card"
                android:layout_width="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/MediumGray"
                android:layout_height="60dp"
                android:layout_weight="1"
                app:cardElevation="0dp"
                app:cardCornerRadius="@dimen/card_radius">

                <ImageView
                    style="@style/Background2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/quote1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:fontFamily="@font/oxygen"
                        android:textSize="14sp"
                        android:layout_gravity="center"/>
                    <ImageView
                        android:id="@+id/quoteIm1"
                        android:layout_marginStart="5dp"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center"/>
                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/analysis_card"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginStart="@dimen/big_margin"
                android:layout_weight="1"
                app:strokeWidth="1dp"
                app:strokeColor="@color/MediumGray"
                app:cardCornerRadius="@dimen/card_radius">
                <ImageView
                    style="@style/Background2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/quote2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:fontFamily="@font/oxygen"
                        android:textSize="14sp"
                        android:layout_gravity="center"/>
                    <ImageView
                        android:id="@+id/quoteIm2"
                        android:layout_width="15dp"
                        android:layout_marginStart="5dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center"/>
                </LinearLayout>


            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:id="@+id/cardView2"
            android:layout_width="match_parent"
            android:layout_height="340dp"
            android:layout_margin="@dimen/big_margin"
            android:background="@drawable/future"
            app:cardCornerRadius="30dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/future" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="@dimen/big_margin"
                android:background="@drawable/question" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginStart="@dimen/big_margin"
                android:layout_marginBottom="55dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/oxygen"
                    android:text="@string/upcoming_events"

                    android:textColor="@color/white"
                    android:textSize="@dimen/biggest_text" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/oxygen"
                    android:text="@string/bks_calendar"
                    android:textColor="@color/white"
                    android:textSize="@dimen/biggest_text" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/big_margin"
                    android:fontFamily="@font/book"
                    android:text="@string/first_news_desc"
                    android:textColor="@color/white"
                    android:textSize="@dimen/base_text_size" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:scrollbars="none"
            android:layout_height="360dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/forex"
                    android:layout_width="300dp"
                    android:layout_height="340dp"
                    android:layout_margin="@dimen/big_margin"
                    app:cardCornerRadius="30dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/forex" />

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_margin="@dimen/big_margin"
                        android:background="@drawable/question" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginStart="@dimen/big_margin"
                        android:layout_marginBottom="55dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/oxygen"
                            android:text="@string/forex_news"

                            android:textColor="@color/white"
                            android:textSize="@dimen/biggest_text" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:fontFamily="@font/oxygen"
                            android:text="@string/investing"
                            android:textColor="@color/white"
                            android:textSize="@dimen/biggest_text" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/big_margin"
                            android:fontFamily="@font/book"
                            android:text="@string/second_desc"
                            android:textColor="@color/white"
                            android:textSize="@dimen/base_text_size" />
                    </LinearLayout>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/crypta"
                    android:layout_width="300dp"
                    android:layout_height="340dp"
                    app:layout_constraintStart_toEndOf="@id/forex"
                    android:layout_margin="@dimen/big_margin"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:cardCornerRadius="30dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/crypta" />


                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_margin="@dimen/big_margin"
                        android:background="@drawable/question" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginStart="@dimen/big_margin"
                        android:layout_marginBottom="55dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/oxygen"
                            android:text="@string/crypta_news"

                            android:textColor="@color/white"
                            android:textSize="@dimen/biggest_text" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:fontFamily="@font/oxygen"
                            android:text="@string/investing"
                            android:textColor="@color/white"
                            android:textSize="@dimen/biggest_text" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/big_margin"
                            android:fontFamily="@font/book"
                            android:text="@string/third_news_desc"
                            android:textColor="@color/white"
                            android:textSize="@dimen/base_text_size" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </androidx.constraintlayout.widget.ConstraintLayout>


        </HorizontalScrollView>

        <View
            android:layout_width="match_parent"
            android:layout_height="70dp"/>
    </LinearLayout>

</ScrollView>
